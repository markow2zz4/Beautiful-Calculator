<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Calculator" parent="Theme.Material3.Dark">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->

    </style>

    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Делает ActionBar прозрачным -->
        <item name="android:actionBarStyle">@style/TransparentActionBar</item>
        <!-- Делает StatusBar прозрачным, если нужно -->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- Стиль для прозрачного ActionBar -->
    <style name="TransparentActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:elevation">0dp</item> <!-- убирает тень -->
    </style>


    <style name="TextAppearance.AppCompat.Numbers" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sniglet_regular</item>
        <item name="android:textColor">@color/numbers</item>
    </style>

    <style name="TextAppearance.AppCompat.Numbers.AutoSolved" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sniglet_regular</item>
        <item name="android:textColor">@color/cacaca</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextAppearance.AppCompat.Numbers.Equals" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sniglet_regular</item>
        <item name="android:textColor">@color/numbers</item>
        <item name="android:textSize">42sp</item>
    </style>

</resources>