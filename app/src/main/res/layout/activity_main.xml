<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/historyRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"

        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2" />



    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_clear"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:gravity="center"
                android:text="C"

                android:layout_margin="5dp"
                style="@style/TextAppearance.AppCompat.Numbers"
                android:textColor="@color/action"
                android:textSize="48sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/iv_eraselast"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"

                    android:src="@drawable/clear"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/percent"
                style="@style/TextAppearance.AppCompat.Numbers"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="%"

                android:textColor="@color/action"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/divide"
                style="@style/TextAppearance.AppCompat.Numbers"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="รท"

                android:textColor="@color/action"
                android:textSize="48sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"

            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_7"
                style="@style/TextAppearance.AppCompat.Numbers"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="7"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/tv_8"
                style="@style/TextAppearance.AppCompat.Numbers"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="8"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/tv_9"
                style="@style/TextAppearance.AppCompat.Numbers"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="9"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/tv_multiple"
                style="@style/TextAppearance.AppCompat.Numbers"
                android:layout_width="90dp"
                android:layout_height="90dp"

                android:layout_margin="5dp"
                android:gravity="center"
                android:text="x"

                android:textColor="@color/action"
                android:textSize="48sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"

            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_4"
                style="@style/TextAppearance.AppCompat.Numbers"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="4"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/tv_5"
                style="@style/TextAppearance.AppCompat.Numbers"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="5"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/tv_6"
                style="@style/TextAppearance.AppCompat.Numbers"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="6"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/tv_minus"
                style="@style/TextAppearance.AppCompat.Numbers"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="-"

                android:textColor="@color/action"
                android:textSize="48sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"

            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_1"
                style="@style/TextAppearance.AppCompat.Numbers"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="1"
                android:textSize="48sp"

                android:focusable="true"
                android:clickable="true"/>

            <TextView
                android:id="@+id/tv_2"
                style="@style/TextAppearance.AppCompat.Numbers"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="2"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/tv_3"
                style="@style/TextAppearance.AppCompat.Numbers"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="3"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/tv_plus"
                style="@style/TextAppearance.AppCompat.Numbers"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/action"
                android:textSize="48sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"

            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_clear_history"
                style="@style/TextAppearance.AppCompat.Numbers"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="AC"
                android:textColor="@color/action"
                android:textSize="48sp" />


            <TextView
                android:id="@+id/tv_0"
                style="@style/TextAppearance.AppCompat.Numbers"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="0"

                android:textSize="48sp" />

            <TextView
                android:id="@+id/tv_comma"
                style="@style/TextAppearance.AppCompat.Numbers"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text=","
                android:textSize="64sp" />

            <ImageView
                android:id="@+id/iv_equals"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:src="@drawable/equals" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="bottom"
        android:gravity="end"

        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/input_text"
                style="@style/TextAppearance.AppCompat.Numbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="0"
                android:textSize="42sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearNumbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/equals_result_text"
                style="@style/TextAppearance.AppCompat.Numbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textColor="@color/cacaca"

                android:textSize="32sp" />

            <TextView
                android:id="@+id/result_text"
                style="@style/TextAppearance.AppCompat.Numbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"

                android:text="0"
                android:textColor="@color/cacaca"

                android:textSize="32sp"
                android:visibility="visible" />
        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>